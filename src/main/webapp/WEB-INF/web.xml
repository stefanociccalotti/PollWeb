<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <display-name>loginController</display-name>
    <servlet-name>loginController</servlet-name>
    <servlet-class>it.univaq.disim.controller.loginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>homeController</display-name>
    <servlet-name>homeController</servlet-name>
    <servlet-class>it.univaq.disim.controller.homeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>homeController</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>profileController</display-name>
    <servlet-name>profileController</servlet-name>
    <servlet-class>it.univaq.disim.controller.profileController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>profileController</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>ViewSurveysController</display-name>
    <servlet-name>ViewSurveysController</servlet-name>
    <servlet-class>it.univaq.disim.controller.ViewSurveysController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewSurveysController</servlet-name>
    <url-pattern>/viewSurveys</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SurveyEditorController</servlet-name>
    <servlet-class>it.univaq.disim.controller.SurveyEditorController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SurveyEditorController</servlet-name>
    <url-pattern>/surveyEditor</url-pattern>
  </servlet-mapping>


  <servlet>
    <display-name>CuratorsController</display-name>
    <servlet-name>CuratorsController</servlet-name>
    <servlet-class>it.univaq.disim.controller.CuratorsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CuratorsController</servlet-name>
    <url-pattern>/curators</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ParticipantsController</servlet-name>
    <servlet-class>it.univaq.disim.controller.ParticipantsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ParticipantsController</servlet-name>
    <url-pattern>/participantsEditor</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>it.univaq.disim.security.AuthenticationFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>
